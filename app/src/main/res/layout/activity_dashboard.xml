<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blu"
    tools:context=".Dashboard">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loan Lending"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/Profile"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_marginTop="10dp"

        >

    </ImageView>

    <ImageView
        android:id="@+id/Setting"
        android:layout_marginTop="-50dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/ic_baseline_perm_device_information_24">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="15sp"
        android:layout_marginLeft="350dp"

        >

    </TextView>

    <TextView
    android:layout_width="150dp"
    android:layout_height="25dp"
    android:text="Loan Taken XXX"
    android:textSize="20sp"
    android:layout_marginTop="45dp"
    android:layout_marginLeft="10dp"
    android:textStyle="bold"
    />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:text="Payment Left"
        android:layout_marginTop="-30dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bankTransfer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_camera_rear_24"
        android:layout_marginRight="300dp"
        android:layout_marginTop="50dp"
        >


    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank Transfer"
        android:textSize="17sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
android:layout_marginTop="60dp"
        android:layout_marginLeft="145dp"
        android:text="My Account Info">

    </TextView>
    <ImageView
        android:id="@+id/Enquiry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_perm_device_information_24"
        android:layout_marginRight="300dp"
        android:layout_marginTop="30dp"
        >


    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance Enquiry"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/Statement"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_file_copy_24"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-80dp"
        >


    </ImageView>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mini Statement"
        android:textSize="20sp"
        android:layout_marginLeft="250dp"
        />

</LinearLayout>